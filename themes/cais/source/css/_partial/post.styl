.post
    margin: 1rem auto
    padding: 1.2rem 2.3rem
    background-color: #FFF
    border: 1px solid #DDD
    box-shadow: 0 0 2px #DDD

.posts
    //这里的first-child不是指post的第一个子节点
    //而是posts的第一个子节点
    .post:first-child 
        margin-top: 0
    .post-title 
        font-size: 1.5rem
        .post-title-link
            color: #368CCB 
            text-decoration: none
    .post-content 
        font-size: 1.2rem
        a
         color: #368CCB
         text-decoration: none
    .post-meta 
        color: #BABABA
        .post-time
            font-size: 1rem

